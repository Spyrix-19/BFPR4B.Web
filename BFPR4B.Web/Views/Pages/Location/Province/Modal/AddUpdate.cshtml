<!--begin::Modal - Add task-->
<div class="modal fade" id="kt_modal_add_province" tabindex="-1" aria-hidden="true">
	<!--begin::Modal dialog-->
	<div class="modal-dialog modal-dialog-centered mw-700px">
		<!--begin::Modal content-->
		<div class="modal-content">

			<!--begin::Modal header-->
			<div class="modal-header" id="kt_modal_add_province_header">
				<!--begin::Modal title-->
				<h2 class="fw-bold" id="kt_add_province_title">Add Province</h2>
				<!--end::Modal title-->
				<!--begin::Close-->
				<div class="btn btn-icon btn-sm btn-active-icon-primary" data-kt-add-province-modal-action="close">
					<i class="ki-duotone ki-cross fs-1">
						<span class="path1"></span>
						<span class="path2"></span>
					</i>
				</div>
				<!--end::Close-->
			</div>
			<!--end::Modal header-->
			<!--begin::Modal body-->
			<div class="modal-body px-5 my-7">

				<!--begin::Form-->
				<form id="kt_modal_add_province_form" class="form" action="#">

					<!--begin::Scroll-->
					<div class="d-flex flex-column scroll-y px-5 px-lg-10" id="kt_modal_add_province_scroll" data-kt-scroll="true" data-kt-scroll-activate="true" data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_add_province_header" data-kt-scroll-wrappers="#kt_modal_add_province_scroll" data-kt-scroll-offset="300px">

						<!--begin::Primary-->
						<input type="hidden" id="kt_provinceno" name="provinceno" value="0">
						<!--end::Primary-->						

						<!--begin::Region-->
						<div class="fv-row mb-3">
							<!--begin::Label-->
							<label class="fs-6 fw-semibold form-label mt-3">
								<span class="required">Region</span>
								<span class="ms-1" data-bs-toggle="tooltip" title="Select Region.">
									<i class="ki-duotone ki-information fs-7">
										<span class="path1"></span>
										<span class="path2"></span>
										<span class="path3"></span>
									</i>
								</span>
							</label>
							<!--end::Label-->
							<!--end::Label-->
							<div class="w-100">
								<!--begin::Select2-->
								<select id="regionDropdown" class="form-control form-select bg-transparent border border-primary border-hover border-active active" name="province_region" data-control="select2" data-dropdown-parent="#kt_modal_add_province" data-kt-province-region="select_region" data-placeholder="Select option" data-allow-clear="true">
									<option></option>
								</select>
								<!--end::Select2-->
							</div>
						</div>

						<!--begin::province Name-->
						<div class="fv-row mb-3">
							<!--begin::Label-->
							<label class="fs-6 fw-semibold form-label mt-3">
								<span class="required">Province Name</span>
								<span class="ms-1" data-bs-toggle="tooltip" title="Enter the Province Name.">
									<i class="ki-duotone ki-information fs-7">
										<span class="path1"></span>
										<span class="path2"></span>
										<span class="path3"></span>
									</i>
								</span>
							</label>
							<!--end::Label-->
							<!--begin::Input-->
							<input type="text" name="province_name" id="kt_province_name" placeholder="Province Name" class="form-control bg-transparent border border-primary border-hover border-active active" autocomplete="off" value="" />
							<!--end::Input-->
						</div>
						<!--end::province Name-->

					</div>
					<!--end::Scroll-->
					<!--begin::Separator-->
					<div class="separator mb-6"></div>
					<!--end::Separator-->
					<!--begin::Actions-->
					<div class="d-flex justify-content-end text-center pt-10">
						<button type="reset" class="btn btn-light me-3" data-kt-add-province-modal-action="cancel">Discard</button>
						<button id="kt_add_province_submit" type="submit" class="btn btn-primary" data-kt-add-province-modal-action="submit">
							<span class="indicator-label">Submit</span>
							<span class="indicator-progress">
								Please wait...
								<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
							</span>
						</button>
					</div>
					<!--end::Actions-->

				</form>
				<!--end::Form-->
			</div>
			<!--end::Modal body-->
		</div>
		<!--end::Modal content-->
	</div>
	<!--end::Modal dialog-->
</div>
<!--end::Modal - Add task-->