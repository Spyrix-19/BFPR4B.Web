@{ 
	// Master layout
	Layout = "~/Views/Layout/Master.cshtml"; 

	// Layout options
	KTTheme.AddHtmlClass("body", "app-blank");
}

<!--begin::Root-->
<div class="d-flex flex-column flex-root" id="kt_app_root">
	<!--begin::Wrapper-->
	<div class="d-flex flex-column flex-lg-row flex-column-fluid">
		<!--begin::Body-->
		<div class="d-flex flex-column flex-lg-row-fluid w-lg-50 px-5 px-md-15 order-2 order-lg-1">
			<!--begin::Form-->
			<div class="d-flex flex-center flex-column flex-lg-row-fluid">
				<!--begin::Wrapper-->
				<div class="w-lg-500px p-10">
					<!--begin::Page-->
					@RenderBody()
					<!--end::Page-->
				</div>
				<!--end::Wrapper-->
			</div>
			<!--end::Form-->       
	
			<!--begin::Footer-->  
			<div class="d-flex flex-center flex-wrap px-5">
				<!--begin::Links-->
				<div class="d-flex fw-semibold text-primary fs-base">
					<a href="https://region4b.bfp.gov.ph/about-us/about-bfp-mimaropa-2/" class="px-5" target="_blank">About</a>
	
					<a href="https://region4b.bfp.gov.ph/about-us/mission-and-vission/" class="px-5" target="_blank">Mission and Vission</a>
					
					<a href="https://region4b.bfp.gov.ph/about-us/mandates-and-functions/" class="px-5" target="_blank">Mandates and Functions</a>
				</div>
				<!--end::Links-->
			</div>
			<!--end::Footer-->
		</div>
		<!--end::Body-->
		
		<!--begin::Aside-->
		<div class="d-flex flex-lg-row-fluid w-lg-50 bgi-size-cover bgi-position-center order-1 order-lg-2" style='background-image:url(@KTTheme.GetAssetPath("media/logos/rhq2.png"))'>
			<!--begin::Content-->
			<div class="d-flex flex-column flex-center py-7 py-lg-15 px-5 px-md-15 w-100">          
				<!--begin::Logo-->
				<a asp-action="index" asp-controller="dashboards" class="mb-12">
					<img alt="Logo" src='@KTTheme.GetAssetPath("media/logos/mimaropa.png")' class="h-60px h-lg-300px"/>
				</a>    
				<!--end::Logo-->				
			</div>
			<!--end::Content-->
		</div>
		<!--end::Aside-->
	</div>
	<!--end::Wrapper-->
</div>
<!--end::Root-->